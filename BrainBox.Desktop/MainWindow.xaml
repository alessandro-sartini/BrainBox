<Window x:Class="BrainBox.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BrainBox - Gestione Idee" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <!-- ═══════════════════════════════════════ -->
        <!-- DEFINIZIONE RIGHE -->
        <!-- ═══════════════════════════════════════ -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="*"/>
           
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════ -->
        <!-- RIGA 0: HEADER (Titolo App) -->
        <!-- ═══════════════════════════════════════ -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="20">
            <TextBlock Text="🧠 BRAINBOX" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- ═══════════════════════════════════════ -->
        <!-- RIGA 1: CONTENUTO (2 Card affiancate) -->
        <!-- ═══════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="30">

          
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
              
                <ColumnDefinition Width="20"/>
             
                <ColumnDefinition Width="*"/>
             
            </Grid.ColumnDefinitions>

            <!-- ──────────────────────────────── -->
            <!-- CARD 1: GESTIONE IDEE -->
            <!-- ──────────────────────────────── -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="2" 
                    CornerRadius="10"
                    Padding="20">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">

                
                    <TextBlock Text="📋" 
                              FontSize="60" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

              
                    <TextBlock Text="Gestione Idee" 
                              FontSize="22" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Crea, visualizza e modifica le tue idee creative" 
                              FontSize="13"
                              Foreground="#666666"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,0,0,30"/>


                    <Button Name="GoToIdeasButton"
                    Content="Vai alle Idee →" 
                    Click="GoToIdeas_Click"
                    Width="150"
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
                    

                </StackPanel>
            </Border>

            <!-- ──────────────────────────────── -->
            <!-- CARD 2: GESTIONE TEMI -->
            <!-- ──────────────────────────────── -->
            <Border Grid.Column="2" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="2" 
                    CornerRadius="10"
                    Padding="20">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">

                    <TextBlock Text="🏷️" 
                              FontSize="60" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Gestione Temi" 
                              FontSize="22" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Organizza le tue idee per categorie e argomenti" 
                              FontSize="13"
                              Foreground="#666666"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,0,0,30"/>

                    <Button Name="GoToThemesButton"
                    Content="Vai ai Temi →" 
                    Click="GoToThemes_Click"
                    Width="150"
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#FF9800"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>


                </StackPanel>
            </Border>

        </Grid>

    </Grid>
</Window>
